<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>

    <style>
        body {
            background-color: black;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        /* ---------------- LINKS ---------------- */
        a {
            color: #ff4d4d;
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
        }

        .logout-btn:hover {
            background-color: #ff4d4d;
            color: black;
        }

        /* ---------------- LOGOUT ---------------- */
        .logout-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            background-color: #222;
            padding: 10px 15px;
            border-radius: 5px;
        }

        /* ---------------- PROFILE HEADER ---------------- */
        .profile-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
        }

        .profile-pic {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            overflow: hidden;
            border: 3px solid #ff4d4d;
            background-color: #222;
        }

        .profile-pic img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .profile-info h3 {
            margin: 0;
        }

        .profile-info h5 {
            margin-top: 5px;
            color: #ccc;
        }

        /* ---------------- FORM ---------------- */
        form {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
        }

        textarea {
            background-color: #333;
            color: white;
            border: 1px solid white;
            padding: 10px;
            width: 100%;
            max-width: 500px;
            height: 100px;
            border-radius: 5px;
            resize: none;
        }

        button {
            background-color: rgb(11, 155, 233);
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            width: 150px;
            margin-top: 10px;
            cursor: pointer;
            border-radius: 5px;
        }

        button:hover {
            background-color: rgb(15, 100, 246);
            color: black;
        }

        /* ---------------- POSTS ---------------- */
        .post {
            max-width: 600px;
            margin-top: 10px;
        }

        .box {
            background-color: #333;
            padding: 15px;
            border-radius: 8px;
            margin-top: 10px;
            display: flex;
            flex-direction: column;
        }

        h4 {
            margin: 0;
            font-size: 18px;
            color: #ff4d4d;
        }

        p {
            font-size: 14px;
            color: #ddd;
            margin: 10px 0;
        }

        /* ---------------- BUTTON GROUP ---------------- */
        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 10px;
        }

        .edit-btn {
            background-color: rgb(11, 155, 233);
            color: white;
            border: 2px solid rgb(11, 155, 233);
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 14px;
            min-width: 80px;
            text-align: center;
        }

        .edit-btn:hover {
            background-color: white;
            color: rgb(11, 155, 233);
        }

        .like-btn {
            justify-content: space-between;
        }
    </style>
</head>

<body>

    <!-- LOGOUT -->
    <a href="/logout" class="logout-btn">Logout</a>

    <!-- PROFILE HEADER -->
    <div class="profile-header">
        <a href="/profile/<%= user._id%>">
        <div class="profile-pic">
            <img src="./images/uploads/<%= user.images %>" alt="Profile Picture">
        </div></a>

        <div class="profile-info">
            <h3>Hello, <%= user.Username %> üëãüèª </h3>
            <h5>You can create a post</h5>
        </div>
    </div>

    <!-- CREATE POST -->
    <form action="/create_post" method="post">
        <textarea name="content" placeholder="Share your idea"></textarea>
        <button type="submit">Create a post</button>
    </form>

    <!-- YOUR POSTS -->
    <h2>Your Posts</h2>
    <div class="post">
        <% user.post.forEach(pos=> { %>
            <div class="box">
                <h4>
                    <%= user.Username %>
                </h4>
                <p>
                    <%= pos.content %>
                </p>
                <div class="button-group">
                    <a href="/edit/<%= pos._id %>" class="edit-btn">Edit</a>
                </div>
            </div>
            <% }) %>
    </div>

    <!-- OTHERS POSTS -->
    <h2>Others Posts</h2>
    <div class="post">
        <% Others.forEach(otherUser=> { %>
            <% if (otherUser.post && otherUser.post.length> 0) { %>
                <% otherUser.post.forEach(pos=> { %>
                    <div class="box">
                        <h4>
                            <%= otherUser.Username %>
                        </h4>
                        <p>
                            <%= pos.content %>
                        </p>

                        <div class="button-group like-btn">
                            <a href="/like/<%= pos._id %>" class="edit-btn">
                                <%= pos.like ? pos.like.length : 0 %> <span>‚ù§Ô∏è</span>
                            </a>
                            <a href="/likes/<%= pos._id %>" class="edit-btn">
                                Likes
                            </a>
                        </div>
                    </div>
                    <% }) %>
                        <% } %>
                            <% }) %>
    </div>

</body>

</html>