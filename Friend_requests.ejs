<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Friend Requests</title>

    <style>
        body {
            background-color: black;
            color: white;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h2 {
            color: #ff4d4d;
            margin-bottom: 20px;
        }

        .container {
            max-width: 600px;
            margin: auto;
        }

        .request-card {
            background-color: #222;
            border: 1px solid #333;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .avatar {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            overflow: hidden;
            border: 2px solid #ff4d4d;
            background-color: #111;
        }

        .avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .username {
            font-size: 16px;
            font-weight: bold;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 8px 14px;
            border-radius: 6px;
            border: none;
            font-size: 14px;
            cursor: pointer;
            font-weight: bold;
        }

        .accept {
            background-color: #2ecc71;
            color: black;
        }

        .accept:hover {
            background-color: white;
            color: #2ecc71;
        }

        .reject {
            background-color: #e74c3c;
            color: white;
        }

        .reject:hover {
            background-color: white;
            color: #e74c3c;
        }

        .empty {
            text-align: center;
            color: #aaa;
            margin-top: 50px;
        }

        a.back {
            display: inline-block;
            margin-bottom: 20px;
            color: #ff4d4d;
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container">

        <a href="/profile" class="back">‚Üê Back to Profile</a>

        <h2>Friend Requests</h2>

        <% if (requests.length > 0) { %>
            <% requests.forEach(req => { %>
                <div class="request-card">
                    <div class="user-info">
                        <div class="avatar">
                            <img src="/images/uploads/<%= req.from.images %>" alt="Profile">
                        </div>
                        <div class="username">
                            <%= req.from.Username %>
                        </div>
                    </div>

                    <div class="actions">
                        <form action="/accept-request/<%= req.from.Username %>" method="post">
                            <button class="btn accept">Accept</button>
                        </form>

                        <form action="/reject-request/<%= req.from.Username %>" method="post">
                            <button class="btn reject">Reject</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="empty">No friend requests</p>
        <% } %>

    </div>

</body>
</html>
